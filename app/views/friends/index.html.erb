

<h1 style="color:blue">Friend list</h1>

<table class="table table-sm table-striped table-hover table-bordered">
  <thead style="bg-color:dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Telephone</th> 
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_name %></td>
        <td><%= friend.email %></td>
        <td><%= friend.tel_phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= link_to 'Show', friend, class: "btn  btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend),class: "btn btn-secondary btn-sm" %></td>
        <td><%= link_to 'Destroy', friend, class: "btn btn-danger btn-sm", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add Friend', new_friend_path, class: "btn btn-sm btn-primary"%>
